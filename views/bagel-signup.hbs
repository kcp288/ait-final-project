<div class="page-header" id="page-header">
    <h1>{{title}}</h1>
</div>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">
	<!-- show any messages that come back with authentication -->
	<div class="row">
            <div class="alert alert-warning" id="alert">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      {{alert}}
      </div>

	<form action="/bagels/signup" method="post">
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>

 		<input style="right:0px; position:absolute" type="submit" value="Submit" class="btn btn-primary btn-lg" >  
	</form>

		
	<br><br>
	<hr>

	<p>Already on the bagel game? <a href="/bagels/login">Log in here.</a></p>
	<a href="/bagels/">&lt;  Back to bagels</a>

</div>
</div>

<script src="/javascripts/alert.js"></script>